<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shine.user.mapper.UserMapper">

    <select id="pageUser" resultType="com.shine.system.info.UserInfo">
        select *
        from hh_user.user t1
        where t1.deleted = 0
        order by t1.create_time desc
    </select>

    <select id="getById" resultType="com.shine.system.info.UserInfo">
        select *
        from hh_user.user t1
        where t1.deleted = 0
        and t1.id = #{id}
    </select>

    <select id="listByIdList" resultType="com.shine.system.info.UserInfo">
        select t1.*
        from shine_user.user t1
        where t1.deleted = 0
        and t1.id in
        <foreach collection="idList" item="item" close=")" open="(" separator=",">
            #{item}
        </foreach>
    </select>

</mapper>